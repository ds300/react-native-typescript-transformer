{
  "name": "react-native-typescript-transformer",
  "version": "1.2.13",
  "description": "TypeScript transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/ds300/react-native-typescript-transformer",
  "author": "David Sheldrick",
  "license": "MIT",
  "dependencies": {
